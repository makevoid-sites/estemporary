!!! 5
%html
  - TITLE = "EsTemporary"
  %head
    %title= TITLE
    = partial :metas
    %link{ rel: "stylesheet", href: "/css/jq_fancybox.css" }
    %link{ rel: "stylesheet", href: "/css/main.css" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0, user-scalable=no" }
    %meta{ name: "apple-mobile-web-app-capable", content: "yes" }
    %link{ rel: "apple-touch-icon", href: "/img/estemporary_logo_mini.jpg" }
  %body
    #container
      %header
        %h1
          %a{ href: "/" }
            %img{ src: "/imgs/estemporary_logo_mini.jpg" }
            %span.title= TITLE
            %span.by by Silvia Piantini

        %nav
          Collections
          .subnav
            - COLLECTIONS.each do |dir|
              - name = File.basename dir
              %a{ href: "/gallery/collections/#{name}" }= name.humanize
          %a{ href: "/gallery/lookbook" } Lookbook
          %a{ href: "/contacts" } Contacts
      %section.content= yield
      .clear
    %script{ src: "/js/jquery.js",      type: "text/javascript" }
    %script{ src: "/js/jq_fancybox.js", type: "text/javascript" }
    %script{ src: "/js/app.js",         type: "text/javascript" }